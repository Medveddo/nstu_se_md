bench_float_o0:
	bash -c "g++ -std=c++11 -O0 bench.cpp -o bench_float && ./bench_float float O0 && rm ./bench_float"

bench_float_o1:
	bash -c "g++ -std=c++11 -O1 bench.cpp -o bench_float && ./bench_float float O1 && rm ./bench_float"

bench_float_o2:
	bash -c "g++ -std=c++11 -O2 bench.cpp -o bench_float && ./bench_float float O2 && rm ./bench_float"

bench_float_o3:
	bash -c "g++ -std=c++11 -O3 bench.cpp -o bench_float && ./bench_float float O3 && rm ./bench_float"

bench_double_o0:
	bash -c "g++ -std=c++11 -O0 bench.cpp -o bench_double && ./bench_double double O0 && rm ./bench_double"

bench_double_o1:
	bash -c "g++ -std=c++11 -O1 bench.cpp -o bench_double && ./bench_double double O1 && rm ./bench_double"

bench_double_o2:
	bash -c "g++ -std=c++11 -O2 bench.cpp -o bench_double && ./bench_double double O2 && rm ./bench_double"

bench_double_o3:
	bash -c "g++ -std=c++11 -O3 bench.cpp -o bench_double && ./bench_double double O3 && rm ./bench_double"
